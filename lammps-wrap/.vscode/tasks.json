{
    "version": "2.0.0",
    "presentation": {
        "reveal": "always",
        "panel": "new"
    },
    "tasks": [
        {
            "taskName": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "problemMatcher": "$rustc"
        },
        {
            "taskName": "cargo run",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "problemMatcher": "$rustc"
        },
        {
            "taskName": "cargo test",
            "type": "shell",
            "command": "cargo",
            "args": [
                "test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$rustc",
            "options": {
                "env": {
                    "LD_LIBRARY_PATH": "/usr/local/lib"
                }
            }
        },
        {
            "taskName": "cargo clean",
            "type": "shell",
            "command": "cargo",
            "args": [
                "clean"
            ]
        }
    ]
}